<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yundaxue.workshop.acq.label.dao.LabelDao">
    <insert id="insertLabel">
        insert into label (label_id,label_name)
        values(#{labelId},#{labelName})
    </insert>

    <delete id="deleteLabel">
        DELETE FROM label WHERE label_id=#{labelId}
    </delete>

    <select id="getLabel" resultType="org.yundaxue.workshop.acq.label.bo.Label" parameterType="int">
        select * from label where label_id=#{labelId}
    </select>

    <update id="updateLabel">
        UPDATE label
        SET label_name=#{labelName}
        WHERE label_id=#{labelId}
    </update>
</mapper>